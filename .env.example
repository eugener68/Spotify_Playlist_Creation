################################################################################
# Environment configuration (copy to .env).                                      #
# DO NOT commit the real .env file.                                              #
################################################################################

# Spotify Developer application Client ID (required for OAuth PKCE)
SPOTIFY_CLIENT_ID="your_spotify_client_id"

# Comma-separated Spotify scopes. Missing required scopes are auto-added:
# playlist-modify-private, playlist-modify-public, user-top-read, user-follow-read
# You can add more (e.g. user-read-email) if you need them.
SPOTIFY_SCOPES="playlist-modify-private,playlist-modify-public,user-top-read,user-follow-read"

# Loopback redirect port (the app starts http://127.0.0.1:<port>/callback)
SPOTIFY_REDIRECT_PORT="8765"

# Default playlist/UI seed values
DEFAULT_PLAYLIST_NAME="Fav Artists Top Tracks"
DEFAULT_LIMIT_PER_ARTIST="5"
DEFAULT_MAX_ARTISTS="100"
DEFAULT_MAX_TRACKS="500"

# Verbose application logging (true/false)
DEFAULT_VERBOSE="false"

# Logging levels (optional â€“ if your app wires these up)
KIVY_LOG_LEVEL="WARNING"
LOG_LEVEL="WARNING"
HTTP_LOG_LEVEL="WARNING"

