# Environment configuration for Spotify Playlist Automation
# Copy this file to `.env` and fill in your values.

# Spotify Developer application client ID (required)
SPOTIFY_CLIENT_ID="your_spotify_client_id"

# Comma-separated Spotify scopes to request during OAuth
SPOTIFY_SCOPES="playlist-modify-private,playlist-modify-public,user-top-read,user-read-email"

# Optional: redirect port for loopback OAuth (defaults to 8765)
SPOTIFY_REDIRECT_PORT="8765"

# Optional: override default playlist options (used to seed GUI controls)
DEFAULT_PLAYLIST_NAME="Fav Artists Top Tracks"
DEFAULT_LIMIT_PER_ARTIST="5"
DEFAULT_MAX_ARTISTS="50"
DEFAULT_MAX_TRACKS="250"
